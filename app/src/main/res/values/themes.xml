<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WatchIt_movieapp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.WatchIt_movieapp" parent="Base.Theme.WatchIt_movieapp" />


    <style name="Theme.AppStart" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.WatchIt_movieapp</item> </style>

    <style name="Theme.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color" >@color/indicator_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>

        <item name="colorControlActivated">@color/theme_yellow</item>

        <item name="android:textColorHint">@color/grey_icon</item>

        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AuthScreenTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/theme_yellow</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="colorAccent">@color/theme_yellow</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>




</resources>